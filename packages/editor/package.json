  "build": {
    "asar": false,
    "appId": "io.scrowl.app",
    "copyright": "Occupational Safety Group Inc.",
    "productName": "Scrowl",
    "mac": {
      "target": "dir",
      "icon": "build/ico/mac/icon.icns"
    },
    "files": [
      "build/",
      "package.json"
    ]
  },
  "//": {
    "x": "com.apple.security.app-sandbox",
    "build": {
      "dmg": {},
      "pkg": {},
      "win": {},
      "portable": {},
      "appImage": {},
      "flatpak": {},
      "electronDownload": {},
      "beforePack": "./beforePackHook.js",
      "afterPack": "./afterPackHook.js",
      "extraResources": {},
      "extraFiles": {},
      "fileAssociations": {},
      "publish": {}
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
